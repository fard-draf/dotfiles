
[Desktop Entry]
Version=1.0
Type=Application
Name=Local Wezterm
Comment=Lance une session Zellij locale dans Wezterm
# La commande adaptée pour Wezterm via Flatpak
Exec=env WEZTERM_SOCKET=/tmp/wezterm-local flatpak run org.wezfurlong.wezterm start --class zellij -- /home/fard/.cargo/bin/zellij
# L'identifiant pour GNOME, qui doit correspondre à l'option --class
StartupWMClass=zellij
# Votre icône personnalisée
Icon=/home/fard/Pictures/Icones/terminal_w.png
Terminal=false
Categories=System;TerminalEmulator;
