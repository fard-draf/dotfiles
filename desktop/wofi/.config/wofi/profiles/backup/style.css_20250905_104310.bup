#outer-box {
  padding: 25px;
}

#img {
  margin-right: 2px;
}

#entry {
  padding: 3px;
  border-radius: 15px;
}

#entry:selected {
  background-color: #340C97;
  border-radius: 15px;
  border: 5px solid transparent;
}

#text {
  margin: 3px;
}

#input {
    /* On force l'élément à ne prendre aucune place */
    height: 0px;
    min-height: 0px;
    padding: 0px;
    margin: 0px;
    border: none;

    /* On le rend invisible au cas où il occuperait encore de l'espace */
    opacity: 0;
}
