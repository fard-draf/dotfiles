###================================================================================== Start Exec
exec mako #Notifications
exec waybar
exec kanshi #Screen conf 
exec nm-applet #Network
exec --no-startup-id /usr/libexec/xdg-desktop-portal-wlr #portail gtk
exec /home/fard/.config/dsk_scripts/boot-time.sh --log
# exec /home/fard/.config/dsk_scripts/organiser_workspaces.sh

