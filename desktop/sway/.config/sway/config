# Scratchpad
bindsym $mod+minus move scratchpad
# bindsym $mod+minus scratchpad show
bindsym $mod+equal exec /home/fard/.config/dsk_scripts/scratchpad_menu.sh

# Resizing
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Afficher/masquer la barre (Waybar)
bindsym $mod+m bar mode toggle

# Utilities
bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+

# Zellij
bindsym --locked XF86Eject exec zellij ka -y 
# bindsym $mod+XF86Eject exec zellij-action kill



# Pave numerique
bindsym XF86Launch7 exec /usr/bin/gnome-calculator
bindsym XF86Launch8 exec grim -g "$(slurp)" - | wl-copy  # Enhanced screenshot: select area and copy to clipboard
bindsym $mod+Shift+equal exec grim -g "$(slurp)" - | wl-copy  # Enhanced screenshot: select area and copy to clipboard
bindsym XF86Launch9 exec --no-startup-id flatpak run md.obsidian.Obsidian

# Dev extras: Clipboard manager, notifications
exec wl-paste --type text --watch cliphist store  # Install cliphist for clipboard history
bindsym $mod+Shift+v exec cliphist list | wmenu | cliphist decode | wl-copy  # Paste from history

