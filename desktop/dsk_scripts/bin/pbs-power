
#!/usr/bin/env bash
#
# Script de gestion du serveur Proxmox (pbs)
# Usage :
#   pbs-power on      -> Allume le serveur (Wake-on-LAN)
#   pbs-power off     -> Ã‰teint proprement via SSH
#

case "$1" in
  on)
    echo "[INFO] Envoi du Wake-on-LAN pour $MAC"
    ssh -T mgmt.pf.wol.pbs
    ;;
  off)
    echo "[INFO] Extinction du serveur $HOST"
    ssh -T mgmt.pbs.wol.off
    ;;
  *)
    echo "Usage: $0 {on|off}"
    exit 1
    ;;
esac
