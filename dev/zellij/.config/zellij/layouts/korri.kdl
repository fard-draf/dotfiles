layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
    pane_template name="tests_under_files" {
        pane split_direction="horizontal" {
            children
            pane name="Check -A warns" command="sh" size="20%" {
                args "-c" "RUSTFLAGS='-A warnings' cargo check"
            }
            pane name="Test" command="cargo" size="20%" {
            	args "test"
            }
            pane name="Clean" command="cargo" size="5%" {
            	args "clean"
            }
        }
    }

    
    tab name="korri-n2k" split_direction="vertical" cwd="$DEV_PATH/warehouse/projects/libs/korri-n2k" {
    	pane split_direction="horizontal" {
            pane
        	pane size="15%" {
                command "git"
                args "status"
            }
        }        
            pane size="20%" {
                command "tree"
                args "-L" "2" "-a"
            }
    }

    tab name="xtensa" split_direction="horizontal" cwd="$KORRI/bsp/xtensa/korri-bsp-esp32-s3" {
    	pane
    	pane split_direction="vertical" {
    		pane
    		pane size="30%"
    	}
    }

    tab name="risc-v" split_direction="horizontal" cwd="$KORRI/bsp/risc-v/korri-bsp-esp32-c3" {
    	pane
    	pane split_direction="vertical" {
    		pane
    		pane size="30%"
    	}
    }

    tab name="run" split_direction="horizontal" cwd="$KORRI/bsp/" {
         pane split_direction="vertical" {
            pane  {
                cwd "$KORRI/bsp/xtensa/korri-bsp-esp32-s3"
        	}
            pane {
                cwd "$KORRI/bsp/xtensa/korri-bsp-esp32-s3" 
                size "70%"
        	}
        }

         pane split_direction="vertical" {
            pane  {
                cwd "$KORRI/bsp/xtensa/korri-bsp-esp32-s3"
        	}
            pane {
                cwd "$KORRI/bsp/xtensa/korri-bsp-esp32-s3" 
                size "70%"
        	}
        }

         pane split_direction="vertical" {
            pane  {
                cwd "$KORRI/bsp/risc-v/korri-bsp-esp32-c3"
        	}
            pane {
                cwd "$KORRI/bsp/risc-v/korri-bsp-esp32-c3" 
                size "70%"
        	}
        }

    }
}
